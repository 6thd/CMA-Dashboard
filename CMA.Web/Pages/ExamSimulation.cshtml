@page
@model CMA.Web.Pages.ExamSimulationModel
@{
    ViewData["Title"] = "Exam Simulation";
}

<div class="space-y-6">
    <h1 class="text-3xl font-bold text-white text-shadow">Exam Simulation Setup</h1>

    <form method="post">
        <div class="bg-gray-900/50 backdrop-blur-xl border border-white/10 rounded-lg shadow-xl p-6 space-y-4">
            <div>
                <label class="text-gray-200">Number of Questions</label>
                <input type="number" asp-for="Settings.QuestionCount" class="mt-1 w-full bg-gray-800/50 border-white/20 rounded-lg px-4 py-2 text-white" />
            </div>
            <div>
                <label class="text-gray-200">Time Limit (minutes)</label>
                <input type="number" asp-for="Settings.TimeLimit" class="mt-1 w-full bg-gray-800/50 border-white/20 rounded-lg px-4 py-2 text-white" />
            </div>
            <div>
                <label class="text-gray-200">Question Order</label>
                <select asp-for="Settings.DisplayOrder" class="mt-1 w-full bg-gray-800/50 border-white/20 rounded-lg px-4 py-2 text-white">
                    <option value="random">Random</option>
                    <option value="book">Book Order</option>
                    <option value="selection">My Selection</option>
                </select>
            </div>
            <div>
                <button type="submit" class="w-full px-4 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-bold">Start Exam</button>
            </div>
        </div>
    </form>
</div>
