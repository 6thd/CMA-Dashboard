@page
@model CMA.Web.Pages.AIDashboardModel
@{
    ViewData["Title"] = "AI Dashboard";
}

<div class="space-y-6">
    <h1 class="text-3xl font-bold text-white text-shadow">AI-Powered Analytics</h1>

    <!-- Student Selector -->
    <div class="bg-gray-900/50 backdrop-blur-xl border border-white/10 rounded-lg shadow-xl p-4">
        <label for="student-selector" class="text-gray-200">Select Student</label>
        <select id="student-selector" class="mt-1 w-full bg-gray-800/50 border-white/20 rounded-lg px-4 py-2 text-white">
            <!-- Options would be populated from the PageModel -->
            <option>Student 1</option>
            <option>Student 2</option>
        </select>
    </div>

    <!-- AI Analysis -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <div class="bg-gray-900/50 backdrop-blur-xl border border-white/10 rounded-lg shadow-xl p-6">
            <h2 class="text-xl font-bold text-white mb-4">Performance Analysis</h2>
            <p class="text-gray-300">AI-generated insights will appear here.</p>
        </div>
        <div class="bg-gray-900/50 backdrop-blur-xl border border-white/10 rounded-lg shadow-xl p-6">
            <h2 class="text-xl font-bold text-white mb-4">Personalized Study Plan</h2>
            <p class="text-gray-300">A custom study plan will be generated here.</p>
        </div>
    </div>
</div>
