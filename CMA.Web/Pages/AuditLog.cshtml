@page
@model CMA.Web.Pages.AuditLogModel
@{
    ViewData["Title"] = "Audit Log";
}

<div class="space-y-6">
    <h1 class="text-3xl font-bold text-white text-shadow">Audit Log</h1>

    <div class="bg-gray-900/50 backdrop-blur-xl border border-white/10 rounded-lg shadow-xl p-4">
        <form method="get">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label for="user-filter" class="block text-sm font-medium text-gray-200">Filter by User</label>
                    <input id="user-filter" type="text" asp-for="FilterUser" class="mt-1 block w-full bg-gray-800/50 border-white/20 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" />
                </div>
                <div>
                    <label for="action-filter" class="block text-sm font-medium text-gray-200">Filter by Action</label>
                    <select id="action-filter" asp-for="FilterAction" asp-items="Model.ActionTypes" class="mt-1 block w-full bg-gray-800/50 border-white/20 rounded-lg px-4 py-2 text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <option value="">All Actions</option>
                    </select>
                </div>
            </div>
            <div class="mt-4">
                <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Filter</button>
            </div>
        </form>
    </div>

    <div class="bg-gray-900/50 backdrop-blur-xl border border-white/10 rounded-lg shadow-xl">
        <table class="min-w-full divide-y divide-white/10">
            <thead class="bg-black/20">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Timestamp</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">User</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Action</th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Details</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-white/10">
                @if (Model.Logs != null)
                {
                    @foreach (var log in Model.Logs)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-white">@log.User</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">@log.Action</td>
                            <td class="px-6 py-4 whitespace-normal text-sm text-gray-300">@log.Details</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
